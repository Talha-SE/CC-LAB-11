{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "pages/**/*.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/add-user", "dest": "/api/add-user.js" },
    { "src": "/(.*)", "dest": "/pages/$1.html" },
    { "src": "/", "dest": "/pages/index.html" }
  ]
}
